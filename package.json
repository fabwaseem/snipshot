{
  "name": "snipshot",
  "version": "1.0.1",
  "private": true,
  "description": "Modern Screenshot Tool for Windows",
  "homepage": "https://snipshot-alpha.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabwaseem/snipshot.git"
  },
  "scripts": {
    "version:bump": "node scripts/bump-version.js",
    "build:release": "wails build -clean -platform windows/amd64 && wails build -platform windows/amd64 -nsis",
    "release": "powershell -ExecutionPolicy Bypass -File scripts/release.ps1 patch",
    "release:patch": "powershell -ExecutionPolicy Bypass -File scripts/release.ps1 patch",
    "release:minor": "powershell -ExecutionPolicy Bypass -File scripts/release.ps1 minor",
    "release:major": "powershell -ExecutionPolicy Bypass -File scripts/release.ps1 major"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/html2canvas": "^0.5.35"
  },
  "dependencies": {
    "html2canvas": "^1.4.1"
  }
}